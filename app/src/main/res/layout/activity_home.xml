<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="teamminus1.udirtyrat.controllers.Home"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/logout_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Logout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_graph"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/current_user_type"
        android:layout_width="113dp"
        android:layout_height="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        android:layout_marginStart="2dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="2dp" />

    <Button
        android:id="@+id/buttonShowSightings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/logout_button"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/logout_button"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/logout_button" />

    <Button
        android:id="@+id/buttonAddSightings"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New"
        app:layout_constraintTop_toBottomOf="@+id/buttonShowSightings"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/view_in_map"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="View Sighting in Map"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddSightings"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/view_graph"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Graph"
        app:layout_constraintTop_toBottomOf="@+id/view_in_map"
        app:layout_constraintRight_toRightOf="parent"/>


    <ImageView
        android:id="@+id/cheese"
        android:layout_width="132dp"
        android:layout_height="129dp"
        android:layout_marginTop="432dp"
        android:contentDescription="cheeeesseee"
        android:src="@drawable/cheese"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
